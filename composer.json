{
    "name": "nextgn/tracker",
    "description": "NextGN Tracker",
    "keywords": [
        "NextGN",
        "tracker",
        "bittorrent"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.3",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-filter": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-session": "*",
        "ext-tokenizer": "*",
        "brick/math": "^0.14.0",
        "doctrine/dbal": "^4.0",
        "guzzlehttp/guzzle": "^7.9",
        "intervention/image": "^3.8",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "league/flysystem-aws-s3-v3": "^3.0",
        "league/flysystem-local": "^3.0",
        "livewire/livewire": "^3.5",
        "nesbot/carbon": "^3.8",
        "ramsey/uuid": "^4.7",
        "spatie/laravel-permission": "^6.11",
        "spatie/laravel-ray": "^1.37"
    },
    "require-dev": {
        "larastan/larastan": "^2.6",
        "laravel/pint": "^1.16",
        "pestphp/pest": "^2.36",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.2",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
  "scripts": {
    "post-autoload-dump": [
        "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
        "@php artisan package:discover --ansi"
    ],
    "post-root-package-install": [
        "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
        "@php artisan key:generate --ansi"
    ],

    "lint": "vendor/bin/pint --test --ansi",

    "analyse": "vendor/bin/phpstan analyse --memory-limit=1G",

    "rector": "vendor/bin/rector --dry-run",

    "test": "php artisan test --colors=always",

    "check": [
    "@lint",
    "@analyse",
    "@rector"
    ]
},
"extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
